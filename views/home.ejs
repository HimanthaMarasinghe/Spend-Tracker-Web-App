<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="./css/styles.css">
    <script defer src="./scripts/script.js"></script>
    <title>Home</title>
</head>

<body>

    <h1>Spending Tracker</h1>
    <div class="dashBoard">
        <div class="income">
            <h3>Income</h3>
            <h2><%= TotalIncome %></h2>
        </div>
        <div class="expense">
            <h3>Expense</h3>
            <h2><%= TotalExpense %></h2>
        </div>
        <div class="balence">
            <h3>Balance </h3>
            <h2><%= Balance %></h2>
        </div>
    </div>

    <div class="add">
        <div class="toggleBtnArray">
            <button onclick="addIncome()" class="toggleBtn toggleBtn-income">Add Income</button>
            <button onclick="addExpense()" class="toggleBtn toggleBtn-expense">Add Expense</button>
        </div>
        <!-- Add Income -->

        <form action="" class="addIncome active" id="addIncome">
            <h2>Add new Income Item</h2>
            <div>
                <label for="amount">Amount</label>
                <input type="number" id="amount">
            </div>
            <div>
                <label for="type">Type</label>
                <select name="type" id="type">
                    <option>Option_1</option>
                    <option>Option_2</option>
                    <option>Option_3</option>
                    <option>Option_4</option>
                </select>
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text">
            </div>
            <div class="btnArray">
                <button type="submit" value="income" class="income"><i class="fa-solid fa-circle-plus"></i>
                    Income</button>
            </div>
        </form>

        <!-- Add Expese -->

        <form action="" class="addExpense" id="addExpense">
            <h2>Add new Expense Item</h2>
            <div>
                <label for="amount">Amount</label>
                <input type="number" id="amount">
            </div>
            <div>
                <label for="type">Type</label>
                <select name="type" id="type">
                    <option>Option_1</option>
                    <option>Option_2</option>
                    <option>Option_3</option>
                    <option>Option_4</option>
                </select>
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text">
            </div>
            <div class="btnArray">
                <button type="submit" value="expense" class="expense"><i class="fa-solid fa-circle-minus"></i>
                    Expense</button>
            </div>
        </form>
    </div>

    <!-- Transaction History -->

    <div class="history">
        <h2>Transaction History</h2>

        <% historyItems.forEach(item => { %>

        <div class="<%= item.type == 'Income' ? 'incomeItem' : 'expenseItem' %>">
            <div class="col1">
                <h3><%= item.type %> - <%= item.category%></h3>
                <h4><%= item.Date %></h4>
                <h2>Rs.<%= item.amount %>.00</h2>
            </div>
            <div>
                <p><%= item.description %></p>
                <div class="btnArray">
                    <button><i class="fa-solid fa-trash"></i></button>
                    <button><i class="fa-solid fa-pen-to-square"></i></button>
                </div>
            </div>
        </div>

        <% }); %>
    </div>
</body>

</html>