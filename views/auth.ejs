<%- include("partials/header"); %>

<body class="authbody">
    <h1 class="authHeader">Spending Tracker</h1>
    <div class="add" id="auth">
        <div class="toggleBtnArray">
            <button onclick="leftForm()" class="toggleBtn toggleBtn-income">Register</button>
            <button onclick="rightForm()" class="toggleBtn toggleBtn-expense">Log In</button>
        </div>
        <!-- Register -->

        <%- include("partials/register"); %>

        <!-- Log In -->

        <form action="/auth/login" class="rightForm" id="rightForm" method="post" style="margin-top: 60px;">
            <h1>Log In</h1>
            <div>
                <label for="email-login">E-mail</label>
                <input type="email" id="email-login" name="email" autocomplete="email" required>
            </div>
            <div>
                <label for="password-login">Password</label>
                <input type="password" id="password-login" name="password" required>
            </div>
            <div class="btnArray">
                <button type="submit">Log In</button>
            </div>
        </form>
    </div>
</body>

</html>